<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PresenationControlActivity" >

    <Button
        android:id="@+id/vlc_buttonFullScreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/vlc_imageButtonForwards"
        android:text="@string/title_activity_vlc_control_full_screen" />

    <ImageButton
        android:id="@+id/vlc_imageButtonForwards"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vlc_buttonFullScreen"
        android:src="@drawable/progs_presentation_next" />

    <ImageButton
        android:id="@+id/vlc_imageButtonBackwards"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/vlc_imageButtonForwards"
        android:src="@drawable/progs_presentation_previous" />

    <ImageButton
        android:id="@+id/vlc_buttonSoundHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vlc_imageButtonForwards"
        android:layout_alignTop="@+id/vlc_buttonSoundLow"
        android:src="@drawable/system_sound_on" 
        />

    <ImageButton
        android:id="@+id/vlc_buttonSoundLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/vlc_imageButtonBackwards"
        android:layout_below="@+id/vlc_buttonPlayPause"
        android:layout_marginTop="45dp"
        android:src="@drawable/system_sound_low" />

    <ImageButton
        android:id="@+id/vlc_buttonPlayPause"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vlc_imageButtonBackwards"
        android:layout_below="@+id/vlc_buttonShowTime"
        android:layout_marginTop="38dp"
        android:src="@drawable/progs_vlc_play_pause_128" />

    <Button
        android:id="@+id/vlc_buttonShowTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vlc_imageButtonBackwards"
        android:layout_alignRight="@+id/vlc_imageButtonForwards"
        android:layout_below="@+id/vlc_imageButtonBackwards"
        android:text="@string/title_activity_vlc_control_show_time" />

</RelativeLayout>